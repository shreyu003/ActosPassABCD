{% render 'actopass-product-template' %}

{% schema %}
{
    "name": "Event Information",
    "settings": [],
    "blocks": [
        {
          "type": "@app"
        },
        {
            "type": "extra-info",
            "name": "Extra Information Block",
            "settings": [
                {
                    "type": "text",
                    "id": "accor_heading",
                    "label": "Add Heading",
                    "default": "Highlights"
                },
                {
                    "type": "text",
                    "id": "accor_subheading",
                    "label": "Add Sub Heading",
                    "default": "Mid-Year Splash - Tickets"
                }
            ]
        },
        {
            "type": "extra-info2",
            "name": "Extra Information Block 2",
            "settings": [
                {
                    "type": "text",
                    "id": "accor_heading2",
                    "label": "Add Heading",
                    "default": "Terms & Conditions"
                },
                {
                    "type": "text",
                    "id": "accor_subheading2",
                    "label": "Add Sub Heading",
                    "default": "Mid-Year Splash - Tickets"
                }
            ]
        },
        {
            "type": "price-variant",
            "name": "Variant Price Block",
            "settings": [
                {
                    "type": "text",
                    "id": "ticket-price_ttl",
                    "label": "Add Title",
                    "default": "Ticket Prices"
                },
                {
                    "type": "text",
                    "id": "ticket-price_subttl",
                    "label": "Add Sub Title",
                    "default": "Mid-Year Splash - Tickets"
                }
            ]
        },
        {
            "type": "price-detail",
            "name": "Price Details Block",
            "settings": [
                {
                    "type": "url",
                    "id": "dynamic_page_url",
                    "label": "Page URL"
                },
                {
                    "type": "text",
                    "id": "price-from_ttl",
                    "label": "Add Title",
                    "default": "Price From:"
                },
                {
                    "type": "text",
                    "id": "price-from_subttl",
                    "label": "Add Sub Title",
                    "default": "Per Person"
                },
                {
                    "type": "html",
                    "id": "instant_confirmation-icon",
                    "label": "Add SVG Icon"
                },
                {
                    "type": "text",
                    "id": "icon-txt",
                    "label": "Add Icon Related Text",
                    "default": "Instant Confirmation"
                },
                {
                    "type": "url",
                    "id": "select-ticket-btn",
                    "label": "Add Ticket Book Page Link"
                },
                {
                    "type": "html",
                    "id": "select-ticket-btn-icon",
                    "label": "Add Button Icon"
                },
                {
                    "type": "text",
                    "id": "select-ticket-btn-txt",
                    "label": "Add Button Text",
                    "default": "Select Tickets"
                }
            ]
        },
        {
            "type": "loaction-block",
            "name": "Loaction Block",
            "settings": [
                {
                    "type": "text",
                    "id": "location_icon_ttl",
                    "label": "Add Title",
                    "default": "Venue"
                },
                {
                    "type": "text",
                    "id": "location_icon_subttl",
                    "label": "Add Sub Title",
                    "default": "Location"
                },
                {
                    "type": "textarea",
                    "id": "address_txt",
                    "label": "Add Show Address"
                },
                {
                    "type": "html",
                    "id": "loaction-map",
                    "label": "Add Loaction Map"
                }
            ]
        },
        {
            "type": "share-event",
            "name": "Share Event Block",
            "settings": [
                {
                    "type": "html",
                    "id": "share_icon",
                    "label": "Add Share Icon"
                },
                {
                    "type": "text",
                    "id": "share_heading",
                    "label": "Add Heading",
                    "default": "Share Event"
                }
            ]
        },
        {
            "type": "timing-block",
            "name": "Event Time Block",
            "settings": [
                {
                    "type": "text",
                    "id": "timing-heading",
                    "label": "Add Title",
                    "default": "Timing"
                }
            ]
        },
        {
            "type": "sticky-select-ticket",
            "name": "Sticky Select Ticket",
            "settings": [
                {
                    "type": "html",
                    "id": "ticket-icon",
                    "label": "Add Ticket Icon"
                },
                {
                    "type": "text",
                    "id": "price-lable",
                    "label": "Price",
                    "default": "Price"
                },
                {
                    "type": "text",
                    "id": "sticky-ticket-btn-txt",
                    "label": "Add Sticky Ticket BUtoon Text",
                    "default": "select ticket"
                },
                {
                    "type": "html",
                    "id": "sticky-ticket-btn-icon",
                    "label": "Add Sticky Ticket BUtoon Icon"
                },
                {
                    "type": "url",
                    "id": "select-ticket_page",
                    "label": "Add Book Page That You Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Acotpass Product Information"
        }
    ]
}
{% endschema %}
