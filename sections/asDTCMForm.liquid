<style>
    .DTCM_form_main{
        padding-top: {{ section.settings.padding-top-desk }}px;
        padding-bottom: {{ section.settings.padding-bottom-desk }}px;
    }
    
    @media screen and (max-width: 1024px){
        .DTCM_form_main{
            padding-top: {{ section.settings.padding-top-taplop }}px;
            padding-bottom: {{ section.settings.padding-bottom-taplop }}px;
        }
    }
    
    @media screen and (max-width: 768px){
        .DTCM_form_main{
            padding-top: {{ section.settings.padding-bottom-tab }}px;
            padding-bottom: {{ section.settings.padding-bottom-tab }}px;
        }
    }
    
    @media screen and (max-width: 425px){
        .DTCM_form_main{
            padding-top: {{ section.settings.padding-top-mbl }};
            padding-bottom: {{ section.settings.padding-bottom-mbl }};
        }
    }
</style>

<section class="DTCM_form_main">
    <div class="container-1170">
        <div class="DTCM_form-heading">
            <h2> {{ section.settings.ttl_txt }} </h2>
        </div>
        <form class="DTCM_form">
            <div class="DTCM_form-inner">
                <div>
                    <label for="email"> Your email <span style="color: #fd0000;">*</span> </label>
                    <input type="email" name="email" required>
                </div>
                <div>
                    <label for="phone-number"> Your phone number <span style="color: #fd0000;">*</span> </label>
                    <input type="tel" name="phone-number" maxlength="10" required>
                </div>
            </div>
            <div>
                <label for="event-date"> What is the expected event date? <span style="color: #fd0000;">*</span> </label>
                <input type="date" id="getEventDateInputDate">
            </div>
            <div>
                <label for="event-details"> Event details (please share additional information) </label>
                <textarea rows="3" name="event-details"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="DTCM_form-submit-btn"> submit </button>
            </div>
        </form>
    </div>
</section>

